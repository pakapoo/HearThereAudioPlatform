<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.logintest.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" "
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/AccountID"
        android:layout_alignBottom="@+id/AccountID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cover_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/AccountID"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="-4dp"
        android:background="#AAffffff"
        android:layout_marginBottom="19dp"
        android:textColor="@android:color/darker_gray"
        android:text="  username"
        android:layout_above="@+id/Password"
        android:layout_alignLeft="@+id/Password"
        android:layout_alignStart="@+id/Password"
        android:layout_alignRight="@+id/b_login"
        android:layout_alignEnd="@+id/b_login" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="#aaffffff"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="-4dp"
        android:textColor="@android:color/darker_gray"
        android:text="  password"
        android:layout_above="@+id/login_check1"
        android:layout_alignRight="@+id/login_check1"
        android:layout_alignEnd="@+id/login_check1"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="270dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybutton2"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:text="登入"
        android:layout_above="@+id/fb_login_bn"
        android:layout_alignLeft="@+id/fb_login_bn"
        android:layout_alignStart="@+id/fb_login_bn"
        android:layout_marginBottom="11dp" />

    <CheckBox
        android:id="@+id/login_check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_gravity="center_horizontal"
        android:text="記住密碼"
        android:layout_above="@+id/b_login"
        android:layout_alignRight="@+id/b_login"
        android:layout_alignEnd="@+id/b_login" />

    <TextView
        android:id="@+id/register"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:text="Don't have an account?"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignBottom="@+id/b_register"
        android:layout_alignLeft="@+id/fb_login_bn"
        android:layout_alignStart="@+id/fb_login_bn"
        android:layout_alignTop="@+id/b_register" />

    <Button
        android:id="@+id/b_register"
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_alignBottom="@+id/data"
        android:layout_toRightOf="@+id/register"
        android:layout_toEndOf="@+id/register" />


    <Button
        android:id="@+id/fb_login_bn"
        android:layout_width="270dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybutton3"
        android:text="繼續使用Facebook帳號"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/register"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/AccountID"
        android:background="#AAffffff"
        android:layout_toLeftOf="@+id/AccountID"
        android:layout_alignBottom="@+id/AccountID"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AccountID"
        android:background="#AAffffff"
        android:text="          "
        android:layout_alignBottom="@+id/Password"
        android:layout_alignLeft="@+id/b_login"
        android:layout_alignStart="@+id/b_login" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/AccountID"
        android:layout_toLeftOf="@+id/AccountID"
        app:srcCompat="@drawable/account"
        android:layout_alignBottom="@+id/AccountID"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/password"
        android:layout_below="@+id/AccountID"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_toStartOf="@+id/Password"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toLeftOf="@+id/Password" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/AccountID"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher_foreground" />


</RelativeLayout >
